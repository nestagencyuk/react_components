{
  "name": "react_components",
  "version": "1.0.0",
  "description": "A collection of React pure components, built with TypeScript",
  "main": "index.js",
  "types": "types.d.ts",
  "scripts": {
    "dev": "ts-node --files index.ts init",
    "scaffold:stateless": "ts-node --files index.ts scaffold --name=$NAME --type=stateless",
    "scaffold:stateful": "ts-node --files index.ts scaffold --name=$NAME --type=stateful",
    "test": "npm run test:unit",
    "test:unit": "ts-mocha -r tsconfig-paths/register src/**/*.test.t{s,sx}",
    "build": "ts-node --files index.ts init --mode=prod",
    "clean": "rm package-lock.json && rm -rf node_modules && npm i"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nestagencyuk/react_components.git"
  },
  "keywords": [
    "react",
    "typescript"
  ],
  "author": "Milly Billins @ Nest Agency Ltd",
  "license": "ISC",
  "homepage": "https://github.com/nestagencyuk/react_components#readme",
  "dependencies": {
    "@types/classnames": "^2.2.9",
    "@types/react": "^16.9.2",
    "@types/react-dom": "^16.9.0",
    "classnames": "^2.2.6",
    "colors": "^1.3.3",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "scss-lib": "file:../scss_lib"
  },
  "devDependencies": {
    "@types/chai": "^4.2.2",
    "@types/enzyme": "^3.10.3",
    "@types/enzyme-adapter-react-16": "^1.0.5",
    "@types/fs-extra": "^8.0.0",
    "@types/ignore-styles": "^5.0.0",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.7.4",
    "@types/sinon": "^7.0.13",
    "@types/webpack": "^4.39.1",
    "autoprefixer": "^9.6.1",
    "chai": "^4.2.0",
    "css-loader": "^3.2.0",
    "cssnano": "^4.1.10",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "fs-extra": "^8.1.0",
    "html-webpack-plugin": "^3.2.0",
    "ignore-styles": "^5.0.1",
    "jsdom": "15.1.1",
    "jsdom-global": "3.0.2",
    "make-runnable": "^1.3.6",
    "mini-css-extract-plugin": "^0.8.0",
    "mocha": "^6.2.0",
    "node-sass": "^4.12.0",
    "postcss-loader": "^3.0.0",
    "prettier": "^1.18.2",
    "prettier-webpack-plugin": "^1.2.0",
    "sass-loader": "^7.2.0",
    "sinon": "^7.4.2",
    "ts-loader": "^6.0.4",
    "ts-mocha": "^6.0.0",
    "ts-node": "^8.3.0",
    "typescript": "^3.6.2",
    "typescript-lib-backend": "file:../typescript_lib-backend",
    "webpack": "^4.39.3",
    "webpack-bundle-analyzer": "^3.4.1",
    "webpack-dev-server": "^3.8.0",
    "write-file-webpack-plugin": "^4.5.1"
  }
}
