{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "lib": [
      "esnext.asynciterable",
      "es5",
      "es7",
      "es2015",
      "es2017",
      "dom"
    ], 
    "jsx": "react",
    "baseUrl": "./src/",
    "paths": {
      "@assets/*": [
        "./assets/*"
      ],
      "@components/*": [
        "./components/*"
      ],
    }
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "./node_modules",
    "./src/components/_Template/*",
    "./src/**/*.test.tsx",
    "./src/**/*.test.ts"
  ]
}